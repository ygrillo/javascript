{
  "name": "api-node-express",
  "version": "1.1.0",
  "description": "API que simula as funções de uma livraria com busca, filtro e cadastro de autores e livros.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.js",
    "eslint": "npx eslint . --fix",
    "prettier": "npx prettier . --write"
  },
  "keywords": [],
  "author": "Yuri Grillo",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "prettier": {
    "semi": false,
    "overrides": [
      {
        "files": "eslint.config.js",
        "options": {
          "singleQuote": false
        }
      }
    ],
    "trailingComma": "none",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "eslint": "^9.6.0",
    "globals": "^15.8.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^2.0.15",
    "prettier": "^3.3.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.3",
    "express": "^4.17.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.7.0",
    "mongoose": "^6.2.6",
    "mongoose-autopopulate": "^1.1.0"
  },
  "engines": {
    "node": ">=20.13.1",
    "npm": ">=10.5.2"
  }
}
